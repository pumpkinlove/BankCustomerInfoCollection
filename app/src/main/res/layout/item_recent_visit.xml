<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_recentVisit_weekday"
        android:text="星期一"
        android:textColor="@color/black"
        android:layout_weight="10"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_recentVisit_customerName"
        android:text="张三"
        android:textColor="@color/black"
        android:layout_weight="9"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_recentVisit_phoneNumber"
        android:text="6465165543"
        android:textColor="@color/black"
        android:layout_weight="8"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_recentVisit_visitor"
        android:text="李四"
        android:textColor="@color/black"
        android:layout_weight="10"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_recentVisit_date"
        android:text="05-08"
        android:textColor="@color/gray_deep"
        android:layout_weight="10"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>